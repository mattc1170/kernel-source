 		brcm,function = <BCM2835_FSEL_ALT0>;
 	};
 
@@ -70,6 +70,8 @@
 };
 
 &pwm {
+	pinctrl-names = "default";
+	pinctrl-0 = <&pwm0_gpio40 &pwm1_gpio45>;
 	status = "okay";
 };
 
